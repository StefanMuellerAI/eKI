# eKI API Environment Configuration
# Copy this file to .env.local and fill in with actual values
# NEVER commit .env.local to version control!

# Environment
ENV=development
DEBUG=true

# Database
POSTGRES_DB=eki_db
POSTGRES_USER=eki_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database Connection
DATABASE_URL=postgresql+asyncpg://eki_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/eki_db
# Optional for production secrets (preferred):
# DATABASE_URL_FILE=/run/secrets/database_url

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# Temporal
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=security-check

# API Security
API_SECRET_KEY=CHANGE_ME_256_BIT_SECRET_KEY_HERE
# Optional for production secrets (preferred):
# API_SECRET_KEY_FILE=/run/secrets/api_secret_key
TRUST_PROXY_HEADERS=false
TRUSTED_PROXY_IPS=

# Metrics
METRICS_ENABLED=true

# LLM Provider (ollama, mistral-cloud, local-mistral)
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=mistral

# Mistral Cloud (if using mistral-cloud provider)
# MISTRAL_API_KEY=your-mistral-api-key-here
# MISTRAL_API_KEY_FILE=/run/secrets/mistral_api_key

# CORS Origins (comma-separated)
CORS_ORIGINS=https://epro.filmakademie.de,https://epro-stage.filmakademie.de

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Generate secure passwords with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
